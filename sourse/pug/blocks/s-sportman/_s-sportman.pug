mixin s-sportman()
	mixin item(i)
		+e.col&attributes(attributes)
			+e.item
				+e.img-wrap.img-bg.block-animate(href="#")
					img.lazy-bg(src="#" data-src=`img/sportman-${i}.jpg`, alt="")
				+e.title Иванов Иван Иванович
				+e.text  Заслуженные тренер
		// /+e.col
	// start s-sportman
	+b.SECTION.s-treners.section.block-with-lazy
		.container 
			.row
				- for (var i = 1; i < 5; i++)
					- for (var x = 1; x < 5; x++)
						+item(x)(class="col-12 col-lg-3 col-md-4 col-sm-6 ")
			+pugin()
	// end s-sportman