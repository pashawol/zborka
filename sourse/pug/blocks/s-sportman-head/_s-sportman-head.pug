mixin s-sportman-head()
	.container
		// start s-sportman-head
		+b.SECTION.s-sportman-head(style="background-image: url(img/sportman-head-bg.jpg);")
				.row
					.col-xl-4.col-lg-3
						+e.img-wrap
							img.res-i(src="img/sportman-head-img.png", alt="")
						+e.flag
							img.res-i(src="img/flag.jpg", alt="")
					.col
						+e.title
							h1 Грищенко Николай Александрович
							.h1 Grishhenko Nikolaj Aleksandrovich
						mixin item(t,p)
							+e.col.col-lg-3.col-auto
								+e.title-col= t
								+e.text= p
						.row.justify-content-center
							+item('Возраст:','24 лет ')
							+item('Рука:','Левая')
							+item('Рост:','1,89 м')
							+item('Pro stasus:','2017')
							+item('Вес:','82 кг')
							+item('Single:','44')
							+item('Место жительства:','РБ, Гродно')
							+item('Double:','88')
						+soc3()
		// end s-sportman-head