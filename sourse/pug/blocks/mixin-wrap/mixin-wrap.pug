	+e.UL.nav
		each linkPatch, linkName in nav
			+e.LI.item: +e.A.link(href= linkPatch)= linkName
 
mixin s-nav(  drop, act, ...items) 
	+b.section-nav
		+e.NAV.body--js(data-droptitle= drop)&attributes(attributes)
				+e.UL.nav.nav-ul
					li
						a.active(href="#")= act
					each item in items 
						li
							a(href="#")= item 

